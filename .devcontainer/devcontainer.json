{
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  // "image": "mcr.microsoft.com/dotnet/nightly/sdk:10.0.100-preview.3",
  // "onCreateCommand": "apt update && apt install xz-utils",
  "updateContentCommand": "wget -O - https://github.com/akinomyoga/ble.sh/releases/download/nightly/ble-nightly.tar.xz | tar xJf - -C /usr/local/share && echo 'source /usr/local/share/ble-nightly/ble.sh' >> ~/.bashrc && sed -i \"s/#force_co/force_co/g\" ~/.bashrc",
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
    "ghcr.io/devcontainers-extra/features/ripgrep:1": {},
    "ghcr.io/devcontainers-extra/features/fd:1": {},
    "ghcr.io/devcontainers-extra/features/fzf:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "extensions.ignoreRecommendations": true
      },
      "extensions": [
        "Ionide.Ionide-fsharp",
        "formulahendry.code-runner",
        "ericniebler.erics-build-output-colorizer",
        "sporiley.symbol-complete"
      ]
    }
  }
}